@*@model ProjectManagementBusinessLayer.Entities.PaymentTerm*@
@using ProjectManagementAppLayer.DTOs.Update
@model UpdatePaymentTermDTO
@{
    ViewData["Title"] = "Edit";
    var pay = (PaymentTerm)ViewBag.pTerm;
}

<h1>Edit</h1>

<h4>PaymentTerm</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@pay.Id" name="PaymentTermId"/>
            <input type="hidden" value="@pay.DeliverableId" name="DeliverableId"/>
            <input type="hidden" asp-for="@pay.Deliverable.ProjectPhaseId" />
            <input type="hidden" asp-for="@pay.Deliverable.ProjectPhase.ProjectId" />
            <input type="hidden" asp-for="@pay.Deliverable.ProjectPhase.PhaseId" />


            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="@pay.Deliverable.ProjectPhase.Project" class="control-label"></label>
                        <input asp-for="@pay.Deliverable.ProjectPhase.Project.ProjectName" class="form-control" disabled />
                    </div>

                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="@pay.Deliverable.ProjectPhase.Phase" class="control-label"></label>
                        <input asp-for="@pay.Deliverable.ProjectPhase.Phase.PhaseName" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="@pay.Deliverable" class="control-label"></label>
                        <input asp-for="@pay.Deliverable.StartDate" class="form-control" disabled />
                    </div>

                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="@pay.Deliverable" class="control-label"></label>
                        <input asp-for="@pay.Deliverable.EndDate" class="form-control" disabled />
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="PaymentTermTitle" class="control-label"></label>
                        <input asp-for="PaymentTermTitle" class="form-control" value="@pay.PaymentTermTitle"/>
                        <span asp-validation-for="PaymentTermTitle" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="PaymentTermAmount" class="control-label"></label>
                        <input asp-for="PaymentTermAmount" class="form-control" value="@pay.PaymentTermAmount"/>
                        <span asp-validation-for="PaymentTermAmount" class="text-danger"></span>
                    </div>

                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
