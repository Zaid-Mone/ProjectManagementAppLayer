@model ProjectManagementBusinessLayer.Entities.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectType.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectStatus.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContractAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContractAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectManager.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Email)
        </dd>
        @foreach (var item in Model.ProjectPhases)
        {
            <dt class="col-sm-2">
                Phase
            </dt>
            <dd class="col-sm-10">
                @item.Phase.PhaseName
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a> |
    <a asp-action="Index"class="btn btn-outline-secondary">Back to List</a>
</div>
